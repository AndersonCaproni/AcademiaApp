@model IEnumerable<AcademiaApp.Models.Treino>

@{
    Layout = "~/Views/Personal/_LayoutPersonal.cshtml";
    ViewData["Title"] = "Gerenciar Treinos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Treinos</h1>
    <a asp-action="Create" class="btn btn-primary">➕ Novo Treino</a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table align-middle table-hover">
            <thead class="table-light">
                <tr>
                    <th>Aluno</th>
                    <th>Data do Treino</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Aluno.Nome</td>
                        <td>@item.DataTreino.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            @if (item.Status == true)
                            {
                                <span class="badge bg-success">Feito</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Não Feito</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-2">
                                ✏️ Editar
                            </a>
                            <a asp-action="DetailPersonal" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">
                                📖 Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                🗑️ Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
