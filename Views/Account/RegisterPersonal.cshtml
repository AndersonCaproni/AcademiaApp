@model AcademiaApp.Models.RegisterPersonalView

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Mantenha seu layout principal
    ViewData["Title"] = "Registrar Personal";
}

<h2 class="mb-4">💪 Registrar Personal</h2>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <form asp-action="RegisterPersonal" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                <input asp-for="Nome" class="form-control rounded-3" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">E-mail</label>
                <input asp-for="Email" class="form-control rounded-3" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CPF" class="form-label fw-semibold">CPF</label>
                <input asp-for="CPF" class="form-control rounded-3" />
                <span asp-validation-for="CPF" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CREF" class="form-label fw-semibold">CREF</label>
                <input asp-for="CREF" class="form-control rounded-3" />
                <span asp-validation-for="CREF" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataNascimento" class="form-label fw-semibold">Data de Nascimento</label>
                <input asp-for="DataNascimento" type="date" class="form-control rounded-3" />
                <span asp-validation-for="DataNascimento" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefone" class="form-label fw-semibold">Telefone</label>
                <input asp-for="Telefone" class="form-control rounded-3" />
                <span asp-validation-for="Telefone" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Senha" class="form-label fw-semibold">Senha</label>
                <input asp-for="Senha" type="password" class="form-control rounded-3" />
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmarSenha" class="form-label fw-semibold">Confirmar Senha</label>
                <input asp-for="ConfirmarSenha" type="password" class="form-control rounded-3" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                    ✅ Registrar
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    ❌ Cancelar
                </a>
            </div>

        </form>

    </div>
</div>
