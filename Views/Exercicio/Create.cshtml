@model AcademiaApp.Models.Exercicio

@{
    Layout = "~/Views/Personal/_LayoutPersonal.cshtml";
    ViewData["Title"] = "Criar Exercício";
}

<h2 class="mb-4">➕ Criar Novo Exercício</h2>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                <input asp-for="Nome" class="form-control rounded-3" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Categoria" class="form-label fw-semibold">Categoria</label>
                <input asp-for="Categoria" class="form-control rounded-3" />
                <span asp-validation-for="Categoria" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label fw-semibold">Descrição</label>
                <input asp-for="Descricao" class="form-control rounded-3" />
                <span asp-validation-for="Descricao" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                    💾 Salvar
                </button>
                <a asp-action="ListarExerciciosPersonal" class="btn btn-outline-secondary rounded-pill px-4">
                    ❌ Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
