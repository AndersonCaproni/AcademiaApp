@model AcademiaApp.Models.Exercicio

@{
    Layout = "~/Views/Personal/_LayoutPersonal.cshtml";
    ViewData["Title"] = "Detalhes do Exercício";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h4">📋 Detalhes do Exercício</h2>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label fw-bold">Nome</label>
            <p class="form-control-plaintext">@Model.Nome</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Categoria</label>
            <p class="form-control-plaintext">@Model.Categoria</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Descrição</label>
            <p class="form-control-plaintext">@Model.Descricao</p>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                ✏️ Editar
            </a>
            <a class="btn btn-outline-secondary" asp-action="ListarExerciciosPersonal">
                🔙 Voltar
            </a>
        </div>
    </div>
</div>
